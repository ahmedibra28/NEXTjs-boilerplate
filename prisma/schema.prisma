generator client {
  provider = "prisma-client"
  output   = "generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String   @id @default(nanoid(21))
  email               String   @unique
  name                String
  image               String?
  mobile              String?
  address             Address?
  bio                 String?
  password            String
  status              Status   @default(PENDING_VERIFICATION)
  resetPasswordToken  String?
  resetPasswordExpire BigInt?
  accessToken         String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  role   Role   @relation(fields: [roleId], references: [id], onDelete: Restrict)
  roleId String

  @@map("users")
}

model Role {
  id          String   @id @default(nanoid(21))
  name        String   @unique
  type        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users             User[]
  permissions       Permission[]
  clientPermissions ClientPermission[]

  @@map("roles")
}

model Permission {
  id          String   @id @default(nanoid(21))
  name        String
  method      Method
  route       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  role Role[]

  @@unique([method, route])
  @@map("permissions")
}

model ClientPermission {
  id          String   @id @default(nanoid(21))
  name        String   @unique
  sort        Int
  menu        String
  path        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  role Role[]

  @@map("client_permissions")
}

model Address {
  id      String  @id @default(nanoid(21))
  street  String
  city    String
  state   String?
  zipCode String?
  country String
  userId  String  @unique

  user User @relation(fields: [userId], references: [id], onDelete: Restrict)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("addresses")
}

enum Method {
  GET
  POST
  PUT
  DELETE
}

enum Status {
  ACTIVE
  INACTIVE
  PENDING_VERIFICATION
}
